{% import "wled-settings/sub/macros.jinja2" as macros %}
{% from "wled-settings/sub/editmodal.jinja2" import effectEditModal, progressEditModal %}

{% macro effectOverview(identifier, name, description=None) %}
    <tr class="table-heading" title="{{ description }}">
    <td colspan="2">
        <p>{{ name }}</p>
    </td>
    <td colspan="2">
        <label class="checkbox-label inline">
            Enabled: {{ macros.input("checkbox", "effects." + identifier + ".enabled") }}
        </label>
    </td>
    <td colspan="2" class="text-align-center">
        {{ macros.addEffectBtn(identifier) }}
    </td>
    </tr>
    {{ macros.effectList(identifier) }}
    {{ effectEditModal(identifier, name) }}
{% endmacro %}

{% macro progressOverview(identifier, name, description=None, additional_options=None) %}
    <tr class="table-heading" title="{{ description }}">
    <td colspan="2">
        <p>{{ name }}</p>
    </td>
    <td colspan="2">
        <label class="checkbox-label inline">
            Enabled: {{ macros.input("checkbox", "progress." + identifier + ".enabled") }}
        </label>
    </td>
    <td colspan="2" class="text-align-center">
        {{ macros.addProgressBtn(identifier) }}
    </td>
    </tr>
    {% if additional_options %}{{ additional_options }}{% endif %}
    {{ macros.effectList(identifier, "progress") }}
    {{ progressEditModal(identifier, name) }}
{% endmacro %}
